#:kivy 1.10.1
#:import sm kivy.uix.screenmanager

<Controller>:
    transition: sm.WipeTransition()
    id: MastaSwitch
    MenuScreen:


<MenuScreen>:
    name: "MenuScreen"
    AnchorLayout:
        id: AnchorLay
        anchor_x: 'center'
        GridLayout:
            id: ButtonGrid
            rows: 10
            columns: 1
            size_hint: .75, .75

<ScaleLabel@Label>:
    _scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self._scale or 1.
            y: self._scale or 1.
    canvas.after:
        PopMatrix